				<field name="pts_link3" type="text" size="60" default="http://www.gopiplus.com" label="PTS_LINK" description="PTS_LINK_DESC" />
				<field name="pts_imge3" type="text" size="60" default="http://www.gopiplus.com/extensions/wp-content/themes/gopiplus/images/images.jpg" label="PTS_IMGE" description="PTS_IMGE_DESC" />
